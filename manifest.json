{
  "name" : "Chromekick",
  "version" : "1.1",
  "description" : "Detect and track artists from the web",
  "background" : {
    "scripts": ["scripts/background.js"]
  },
  "options_page": "assets/options.html",
 "permissions": [
   "tabs",
   "chrome://favicon/",
   "http://*/*", 
   "https://*/*"
 ],
  "page_action" :
  {
    "default_icon" : "assets/images/songkick.png",
    "default_title" : "Artist found on page",
    "default_popup": "assets/popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["scripts/contentscript.js", 
              "scripts/songkick.js", 
              "scripts/songkick-artist-hostname-definitions.js", 
              "scripts/service.js", 
              "scripts/helper.js", 
              "scripts/globals.js",
              "scripts/constants.js", 
              "scripts/jquery-1.8.3.min.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" :  "assets/images/songkick-48.png",
    "128" : "assets/images/songkick-128.png"
  },
  "manifest_version": 2
}
