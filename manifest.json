{
  "name" : "Chromekick",
  "version" : "1.1",
  "description" : "Artist-aware plugin",
  "background" : {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
 "permissions": [
   "tabs",
   "chrome://favicon/",
   "http://*/*", 
   "https://*/*"
 ],
  "page_action" :
  {
    "default_icon" : "songkick.png",
    "default_title" : "Artist found on page",
    "default_popup": "popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["contentscript.js", 
              "songkick.js", 
              "songkick-artist-hostname-definitions.js", 
              "service.js", 
              "helper.js", 
              "globals.js",
              "constants.js", 
              "jquery-1.8.3.min.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "songkick-48.png",
    "128" : "songkick-128.png"
  },
  "manifest_version": 2
}
